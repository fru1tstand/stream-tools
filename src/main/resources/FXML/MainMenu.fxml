<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="400.0"
            prefWidth="300.0"
            xmlns="http://javafx.com/javafx/8.0.112"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="me.fru1t.streamtools.controllers.MainMenuController">
    <center>
        <ListView
                fx:id="windowListView"
                prefHeight="430.0"
                prefWidth="600.0"
                BorderPane.alignment="CENTER"/>
    </center>
    <left>
        <ToolBar orientation="VERTICAL"
                 prefHeight="400.0"
                 prefWidth="100.0"
                 BorderPane.alignment="CENTER">
            <items>
                <Button mnemonicParsing="false"
                        onAction="#onAddWindowButtonAction"
                        prefWidth="90.0"
                        text="Add"
                        textAlignment="CENTER"/>
                <Button fx:id="editWindowButton"
                        disable="true"
                        mnemonicParsing="false"
                        prefWidth="90.0"
                        text="Edit"/>
                <Button fx:id="deleteWindowButton"
                        disable="true"
                        mnemonicParsing="false"
                        prefWidth="90.0"
                        text="Delete"
                        textAlignment="CENTER"/>
            </items>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
        </ToolBar>
    </left>
</BorderPane>
