<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="400.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.fru1t.streamtools.controller.MainMenuController">
    <center>
        <ListView fx:id="windowListView" onMouseClicked="#onWindowListViewClick" prefHeight="430.0" prefWidth="600.0" BorderPane.alignment="CENTER" />
    </center>
    <left>
        <ToolBar onMouseClicked="#onToolbarClick" orientation="VERTICAL" prefHeight="400.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <items>
                <MenuButton alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefWidth="90.0" text="Add">
               <items>
                  <MenuItem fx:id="addTextStatsWindowButton" mnemonicParsing="false" onAction="#addTextStatsWindowButtonAction" text="Text Stats" />
               </items></MenuButton>
                <Button fx:id="renameWindowButton" disable="true" mnemonicParsing="false" onAction="#onRenameWindowButtonAction" prefWidth="90.0" text="Rename" />
                <Button fx:id="settingsWindowButton" disable="true" mnemonicParsing="false" onAction="#onSettingsWindowButtonAction" prefWidth="90.0" text="Settings" />
                <Button fx:id="deleteWindowButton" disable="true" mnemonicParsing="false" onAction="#onDeleteWindowButtonAction" prefWidth="90.0" text="Delete" />
            <Separator prefWidth="90.0" />
            <Button fx:id="showWindowButton" disable="true" mnemonicParsing="false" onAction="#onShowWindowButtonAction" prefWidth="90.0" text="Show" />
            <Button fx:id="hideWindowButton" disable="true" mnemonicParsing="false" onAction="#onHideWindowButtonAction" prefWidth="90.0" text="Hide" />
            <Separator prefWidth="90.0" />
            <MenuButton alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefWidth="90.0" text="Other">
              <items>
                  <MenuItem mnemonicParsing="false" text="About" />
                <MenuItem mnemonicParsing="false" text="Help" />
              </items>
            </MenuButton>
            </items>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </ToolBar>
    </left>
</BorderPane>
